  <div class = "column">
    <h1>Dashboard</h1>
    {{> user-info}}
  </div>
<section class="row">
  <div class = "column">
    
    <p>Pets: {{#each pets}}
      <span>{{this.dog_name}} </span>
      {{/each}}
    </p>
    <h2>Add a New Pet</h2>

    <form class="new-pet-form">
      <div>
        <label for="dog-name">Dog Name</label>
        <input type="text" id="dog-name" name="dog-name" />
      </div>
      <div>
        <label for="gender-text">Gender</label>
        <textarea id="gender-text" name="gender-text"></textarea>
      </div>
      <div>
        <label for="bio-text">Bio</label>
        <textarea id="bio-text" name="bio-text" required /></textarea>
      </div>
      <button type="submit" class="btn-warning">Add Pet</button>
    </form>
  </div>

  {{#if bookings}}
  <div class="column">
    <h1>Upcoming Bookings</h1>
    {{#each bookings}}
    <ol>
      <a href="/edit/{{this.dataValues.id}}" class="edit-booking-link">Update {{this.dataValues.pet.dataValues.dog_name}}'s Booking</a>
    </ol>
    {{/each}}
  </div>
  {{/if}}

</section>

{{#if pets}}
<section class="column">
  <h2>Your Pets</h2>
  <ol>
    {{#each pets as |pet|}}
      <a href="/edit/pets/{{pet.id}}" class="edit-pet-link">Update {{dog_name}}'s Information</a>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/js/add-pet.js"></script>


