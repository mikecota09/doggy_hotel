<form action="/api/booking" method="post">
  <hr />
  <div class="elem-group">
    <label for="pets_id">Select Pet</label>
    <select name="pets_id" id="pets_name" class="pet-form">
      {{#each pets}}
        <option
          name="pets_id"
          value="{{this.dataValues.id}}"
        >{{this.dataValues.dog_name}}</option>
      {{/each}}
    </select>
  </div>
  <div class="elem-group inlined">
    <label for="checkin-date">Check-in Date</label>
    <input type="date" id="checkin-date" name="startDate" class="form-control" required />
  </div>
  <div class="elem-group inlined">
    <label for="checkout-date">Check-out Date</label>
    <input type="date" id="checkout-date" name="endDate" class="form-control" required />
  </div>
  <div class="elem-group fixed">
    <label for="message">Anything Else?</label>
    <textarea
      id="message"
      name="user_message"
      placeholder="Tell us anything else that might be important."
      class="bg-light text-dark"
    ></textarea>
  </div>
  <button class="d-flex justify-content-center btn bg-warning text-light" type="submit">Book The Rooms</button>
</form>

<script src="/js/booking.js"></script>